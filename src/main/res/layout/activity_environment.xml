<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:background="@drawable/alarm_popup_bg"
    tools:ignore="UselessParent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="环境切换"
            android:textColor="#292929"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/button_restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重启"
            android:textColor="#F48FB1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:ignore="HardcodedText"
            tools:visibility="visible" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="安全图片"
        android:textColor="#90CAF9"
        android:textSize="12sp"
        tools:ignore="HardcodedText" />

    <RadioGroup
        android:id="@+id/radio_group_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/product_dev"
            style="@style/style_debug_radio_button"
            android:text="develop"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/product_online"
            style="@style/style_debug_radio_button"
            android:text="production"
            tools:ignore="HardcodedText" />
    </RadioGroup>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:background="#E9E9E9" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="API网关环境"
        android:textColor="#90CAF9"
        android:textSize="12sp"
        tools:ignore="HardcodedText" />


    <RadioGroup
        android:id="@+id/radio_group_api"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/apiclient_test"
            style="@style/style_debug_radio_button"
            android:text="test"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/apiclient_pre"
            style="@style/style_debug_radio_button"
            android:text="pre"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/apiclient_online"
            style="@style/style_debug_radio_button"
            android:text="release"
            tools:ignore="HardcodedText" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:background="#E9E9E9" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bone插件环境"
        android:textColor="#90CAF9"
        android:textSize="12sp"
        tools:ignore="HardcodedText" />


    <RadioGroup
        android:id="@+id/radio_group_bone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/bone_test"
            style="@style/style_debug_radio_button"
            android:text="test"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/bone_pretest"
            style="@style/style_debug_radio_button"
            android:text="pre"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:id="@+id/bone_release"
            style="@style/style_debug_radio_button"
            android:text="release"
            tools:ignore="HardcodedText" />
    </RadioGroup>
</LinearLayout>
