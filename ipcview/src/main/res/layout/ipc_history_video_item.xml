<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="85dp"
    android:orientation="horizontal"
    android:background="@drawable/ipc_history_listview_selector_bg"
    >
    <ImageView
        android:id="@+id/list_item_video_im"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:src="@drawable/ilop_ota_device_icon_default"/>

    <TextView
        android:id="@+id/list_item_video_start_tv"
        android:layout_toRightOf="@+id/list_item_video_im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:textColor="#4A4A4A"
        android:text="startTime"/>

    <TextView
        android:id="@+id/list_item_video_end_tv"
        android:layout_toRightOf="@+id/list_item_video_im"
        android:layout_below="@+id/list_item_video_start_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textColor="#4A4A4A"
        android:text="endTime"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/list_item_event_desc_tv"
        android:layout_toRightOf="@+id/list_item_video_im"
        android:layout_below="@+id/list_item_video_start_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textColor="#4A4A4A"
        android:text="desc"
        android:visibility="gone"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#EFEFEF"></View>
</RelativeLayout>
